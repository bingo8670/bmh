<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增用户", new_admin_user_path, class: "btn btn-primary btn-sm") %>
</div>


<table class="table">
<tr>
  <th>序号</th>
  <th>邮箱</th>
  <th>姓名</th>
  <th>性别</th>
  <th>年龄</th>
  <th>职位</th>
  <th>操作</th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
    <td><%= user.sex %></td>
    <td><%= user.age %></td>
    <td><%= user.position %></td>
    <td><%= link_to "编辑资料", edit_admin_user_path(user), :class => "btn btn-default" %></td>
    <td><%= link_to "修改密码", edit_user_password_path(user), :class => "btn btn-default" %></td>
    <td><%= link_to "删除用户", admin_user_path(user), :class => "btn btn-default", :method => :delete, :data => { :confirm => "Are you sure?"  } %></td>

    <!--  暂时取消
    <td><%= link_to "Edit Profile", edit_admin_user_profile_path(user), :class => "btn btn-default" %></td>
  -->
  </tr>
<% end %>
</table>

<%= will_paginate @users %>
