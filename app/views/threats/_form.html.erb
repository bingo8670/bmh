<%= form_for @threat do |f| %>
  <% if @threat.errors.any? %>
    <ul>
      <% @threat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  标题 <%= f.text_field :title %> <br>
  叙述 <br> <%= f.text_area :description %> <br>
  <%= f.submit "Submit", :disable_with => 'Submitting...' %>
<% end %>
