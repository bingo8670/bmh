<%= render "common/navbar" %>
<div class="col-md-12">
  <div class="threat">
    <%= link_to("New threat", new_admin_threat_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody> <% @threats.each do |threat| %>
      <tr>
        <td>#</td>
        <td><%= link_to(threat.title, admin_threat_path(threat)) %></td>
        <td><%= threat.description %></td>
        <td> <%= link_to("Edit", edit_admin_threat_path(threat), class: "btn btn-sm btn-primary")%>
        <%= link_to("Delete", admin_threat_path(threat), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } )%> </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @threats %>
</div>
